
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //----------------------------------------------------------------------
    // Helper Functions
    //----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // isAdmin is now based on a custom token claim, not a Firestore document read.
    // To make a user an admin, you must set a custom claim on their user account.
    // e.g. `auth.setCustomUserClaims(uid, { admin: true })`
    function isAdmin() {
      return isSignedIn() && (request.auth.token.admin == true || isSuperAdmin());
    }

    // Super Admin is also based on a custom token claim.
    // e.g. `auth.setCustomUserClaims(uid, { super_admin: true })`
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.super_admin == true;
    }
    
    //----------------------------------------------------------------------
    // Public Read-Only Collections (Admin-Managed)
    //----------------------------------------------------------------------

    match /vocationalPrograms/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    match /newsArticles/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    match /testimonials/{docId} {
        allow get, list: if true;
        allow write: if isAdmin();
    }

    match /galleryAlbums/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    //----------------------------------------------------------------------
    // User-Submitted Data
    //----------------------------------------------------------------------

    match /applications/{applicationId} {
      allow create: if true;
      // Admins can manage all applications
      allow get, list, update, delete: if isAdmin();
    }

    match /contactMessages/{contactMessageId} {
      allow create: if true;
      // Only admins can read submitted messages
      allow get, list: if isAdmin();
      // Messages are immutable by clients
      allow update, delete: if false; 
    }

    //----------------------------------------------------------------------
    // User-Specific Collections
    //----------------------------------------------------------------------

    match /users/{userId} {
      // Users can get their own data, Admins can get any user's data
      allow get: if isOwner(userId) || isAdmin();
      
      // Admins can list all users
      allow list: if isAdmin();
      
      // Allow user creation.
      // Roles are no longer set on creation; they are managed via custom claims.
      allow create: if isSignedIn() && !('role' in request.resource.data);
                      
      // A user can update their own displayName and photoURL, but not their role.
      allow update: if isOwner(userId) && 
                      !('role' in request.resource.data.keys());
      
      // Only a Super Admin can delete users. They can update roles via custom claims.
      allow delete: if isSuperAdmin(); 
      allow update: if isSuperAdmin(); // SuperAdmins can manage user roles
    }
  }
}
